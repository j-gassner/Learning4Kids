<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:soundEffectsEnabled="true"
    tools:context=".TutorialActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tutorial_background"
        android:src="@drawable/background_f"
        android:scaleType="fitXY"/>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_margin="30dp"
        android:src="@drawable/button_back"
        android:scaleType="fitStart"
        android:background="@null"
        android:id="@+id/button_back_tutorial"
        android:contentDescription="@string/button_back" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="970dp"
        android:src="@drawable/button_skip"
        android:scaleType="fitStart"
        android:background="@null"
        android:id="@+id/button_skip"
        android:contentDescription="@string/button_back"
        android:layout_marginStart="1150dp" />

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:id="@+id/tutorial_progress"
        android:background="@null"
        android:orientation="horizontal" />


    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:background="@null"
        android:id="@+id/button_letter_tutorial"
        android:src="@drawable/f_letter_outline"
        android:contentDescription="@string/button_letter"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="700dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/button_speaker"
        android:scaleType="fitCenter"
        android:background="@null"
        android:id="@+id/button_animal_tutorial"
        android:contentDescription="@string/button_animal"
        />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:rotation="135"
        android:id="@+id/button_point_letter"
        android:src="@drawable/button_arrow"
        android:layout_marginLeft="480dp"
        android:layout_marginStart="480dp"
        android:layout_marginTop="90dp"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:rotation="-115"
        android:id="@+id/button_point_speaker"
        android:src="@drawable/button_arrow"
        android:layout_marginLeft="500dp"
        android:layout_marginStart="500dp"
        android:layout_marginTop="610dp"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:rotation="30"
        android:id="@+id/button_point_back"
        android:src="@drawable/button_arrow"
        android:layout_marginLeft="130dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="80dp"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:rotation="-60"
        android:id="@+id/button_point_submarine"
        android:src="@drawable/button_arrow"
        android:layout_marginLeft="280dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="350dp"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:rotation="-160"
        android:id="@+id/button_point_sign"
        android:src="@drawable/button_arrow"
        android:layout_marginLeft="890dp"
        android:layout_marginStart="890dp"
        android:layout_marginTop="360dp"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/left"
        android:layout_width="380dp"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:orientation="vertical" >

    </LinearLayout>


    <LinearLayout
        android:id="@+id/middle"
        android:layout_width="520dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/right"
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/animal"
        android:layout_height="300dp"
        android:layout_width="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="370dp"
        android:scaleType="matrix"
        android:contentDescription="@string/animal"/>
    <!--android:adjustViewBounds="true"
    android:scaleType="fitCenter"
    android:cropToPadding="false"-->


</FrameLayout>