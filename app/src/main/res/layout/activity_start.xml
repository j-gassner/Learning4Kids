<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/blackboard_menu"
    tools:context=".StartActivity">

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:src="@drawable/button_reset"
        android:scaleType="fitStart"
        android:background="@null"
        android:id="@+id/button_reset"
        android:contentDescription="@string/button_reset"
        android:onClick="onClick" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/button_exit"
        android:scaleType="fitCenter"
        android:background="@null"
        android:id="@+id/button_exit"
        android:contentDescription="@string/button_exit"
        android:onClick="onClick"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="700dp"
        android:src="@null"
        android:scaleType="fitCenter"
        android:background="@null"
        android:id="@+id/button_unlock"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/button_unlock"
        android:onClick="onClick"
      android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="670dp"
        android:src="@drawable/button_museum"
        android:scaleType="fitCenter"
        android:background="@null"
        android:id="@+id/button_museum"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/button_exit"
        android:onClick="onClick" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="140dp"
        android:layout_marginStart="100dp"
        android:src="@drawable/button_tutorial"
        android:scaleType="fitCenter"
        android:background="@null"
        android:id="@+id/button_tutorial"
        android:contentDescription="@string/button_tutorial"
        android:onClick="onClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/name_child"
        android:text="Tierische"
        android:textStyle="bold"
        android:textColor="@color/white"
      android:fontFamily="@font/chalk"
      android:textSize="80sp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Weltreise"
        android:textColor="@color/white"
        android:textStyle="bold"
      android:fontFamily="@font/chalk"
      android:textSize="80sp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true" />



    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:rotation="-150"
        android:id="@+id/button_point_museum"
        android:src="@drawable/button_arrow"
        android:layout_marginLeft="450dp"
        android:layout_marginStart="450dp"
        android:layout_marginTop="650dp"
        android:visibility="invisible"
        />
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:rotation="45"
        android:id="@+id/button_point_reset"
        android:src="@drawable/button_arrow"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:visibility="invisible"

        />
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
      android:rotation="60"
        android:id="@+id/button_point_tutorial"
        android:src="@drawable/button_arrow"
      android:layout_marginLeft="100dp"
      android:layout_marginStart="100dp"
      android:layout_marginTop="80dp"
        android:visibility="invisible"

        />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:rotation="-135"
        android:id="@+id/button_point_f"
        android:src="@drawable/button_arrow"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="150dp"
        android:visibility="invisible"
        />


    <ImageButton
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:alpha="0.2"
        android:id="@+id/scroll_left"
        android:src="@drawable/scroll_left"
      android:background="@null"
      android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="375dp"
        android:layout_alignParentStart="true"
      android:visibility="invisible"
      android:onClick="onClick" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:alpha="0.2"
        android:id="@+id/scroll_right"
        android:src="@drawable/scroll_right"
      android:background="@null"
      android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:layout_marginTop="375dp"

        android:layout_alignParentEnd="true"
      android:visibility="invisible"
      android:onClick="onClick" />

    <HorizontalScrollView
      android:id="@+id/scroll_horizontal"
      android:layout_width="1110dp"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"

      android:layout_marginTop="250dp"

      android:background="@null"
      android:orientation="horizontal"
      android:scrollbars="none">


        <LinearLayout
          android:id="@+id/layout_scroll"
          android:layout_width="wrap_content"
          android:layout_height="match_parent">

            <ImageButton
              android:id="@+id/button_f"
              android:layout_width="350dp"
              android:layout_height="350dp"
              android:layout_marginStart="0dp"
              android:layout_marginLeft="0dp"
              android:adjustViewBounds="true"
              android:background="@null"
              android:contentDescription="@string/button_f"
              android:onClick="onClick"
              android:scaleType="fitCenter" />

            <ImageButton
              android:id="@+id/button_l"
              android:layout_width="350dp"
              android:layout_height="350dp"
              android:layout_marginStart="30dp"
              android:layout_marginLeft="30dp"
              android:adjustViewBounds="true"
              android:background="@null"
              android:contentDescription="@string/button_l"
              android:onClick="onClick"
              android:scaleType="fitCenter" />

            <ImageButton
              android:id="@+id/button_r"
              android:layout_width="350dp"
              android:layout_height="350dp"
              android:layout_marginStart="30dp"
              android:layout_marginLeft="30dp"
              android:adjustViewBounds="true"
              android:background="@null"
              android:contentDescription="@string/button_r"
              android:onClick="onClick"
              android:scaleType="fitCenter" />

            <ImageButton
              android:id="@+id/button_m"
              android:layout_width="350dp"
              android:layout_height="350dp"
              android:layout_marginStart="30dp"
              android:layout_marginLeft="30dp"
              android:adjustViewBounds="true"
              android:background="@null"
              android:contentDescription="@string/button_m"
              android:onClick="onClick"
              android:scaleType="fitCenter" />

            <ImageButton
              android:id="@+id/button_n"
              android:layout_width="350dp"
              android:layout_height="350dp"
              android:layout_marginStart="30dp"
              android:layout_marginLeft="30dp"
              android:adjustViewBounds="true"
              android:background="@null"
              android:contentDescription="@string/button_n"
              android:onClick="onClick"
              android:scaleType="fitCenter" />

            <ImageButton
              android:id="@+id/button_i"
              android:layout_width="350dp"
              android:layout_height="350dp"
              android:layout_marginStart="30dp"
              android:layout_marginLeft="30dp"
              android:adjustViewBounds="true"
              android:background="@null"
              android:contentDescription="@string/button_i"
              android:onClick="onClick"
              android:scaleType="fitCenter" />

            <ImageButton
              android:id="@+id/button_e"
              android:layout_width="350dp"
              android:layout_height="350dp"
              android:layout_marginStart="30dp"
              android:layout_marginLeft="30dp"
              android:adjustViewBounds="true"
              android:background="@null"
              android:contentDescription="@string/button_e"
              android:onClick="onClick"
              android:scaleType="fitCenter" />

            <ImageButton
              android:id="@+id/button_a"
              android:layout_width="350dp"
              android:layout_height="350dp"
              android:layout_marginStart="30dp"
              android:layout_marginLeft="30dp"
              android:adjustViewBounds="true"
              android:background="@null"
              android:contentDescription="@string/button_a"
              android:onClick="onClick"
              android:scaleType="fitCenter" />

            <ImageButton
              android:id="@+id/button_o"
              android:layout_width="350dp"
              android:layout_height="350dp"
              android:layout_marginStart="30dp"
              android:layout_marginLeft="30dp"
              android:adjustViewBounds="true"
              android:background="@null"
              android:contentDescription="@string/button_o"
              android:onClick="onClick"
              android:scaleType="fitCenter" />

            <ImageButton
              android:id="@+id/button_s"
              android:layout_width="350dp"
              android:layout_height="350dp"
              android:layout_marginStart="30dp"
              android:layout_marginLeft="30dp"
              android:adjustViewBounds="true"
              android:background="@null"
              android:contentDescription="@string/button_s"
              android:onClick="onClick"

              android:scaleType="fitCenter" />

            <ImageButton
              android:id="@+id/button_b"
              android:layout_width="350dp"
              android:layout_height="350dp"
              android:layout_marginStart="30dp"
              android:layout_marginLeft="30dp"
              android:adjustViewBounds="true"
              android:background="@null"
              android:contentDescription="@string/button_b"
              android:onClick="onClick"
              android:scaleType="fitCenter" />

            <ImageButton
              android:id="@+id/button_t"
              android:layout_width="350dp"
              android:layout_height="350dp"
              android:layout_marginStart="30dp"
              android:layout_marginLeft="30dp"
              android:adjustViewBounds="true"
              android:background="@null"
              android:contentDescription="@string/button_t"
              android:onClick="onClick"
              android:scaleType="fitCenter" />

        </LinearLayout>

    </HorizontalScrollView>
</RelativeLayout>
